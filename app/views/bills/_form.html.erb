<%= simple_form_for @bill_form, wrapper: :horizontal_form, :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.association :company, prompt: "Choose a Company" %>

  <%= f.input :title, hint: "Paid User Reviews / Poster Design / Cutsom Title" %>

  <%= f.input :amount, wrapper: :horizontal_input_group do %>
    <span class="input-group-addon">&yen;</span>
    <%= f.input_field :amount, as: :integer, min: 0, step: 0.01, placeholder: "0.00", class: "form-control" %>
  <% end %>

  <%= f.input :description, as: :text, input_html: {rows: 5}, placeholder: "Optional" %>

  <%= f.button :button, class: "btn btn-lg btn-block btn-effect-ripple btn-primary", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Just a moment..."} %>
<% end %>
