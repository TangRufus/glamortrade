<head>
  <meta charset="utf-8">

  <title><%= content_for?(:title) ? yield(:title) + " | GlamorTrade" : "GlamorTrade" %></title>
  <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "GlamorTrade" %>">
  <meta name="author" content="GlamorTrade">
  <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1.0">


  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <!-- Modernizr (browser feature detection library) -->
  <%= javascript_include_tag 'modernizr' %>

  <%= csrf_meta_tags %>

</head>
<body>
  <!-- Login Container -->
  <div id="login-container">
    <!-- Login Header -->
    <h1 class="h2 text-light text-center push-top-bottom animation-slideDown">
      <i class="fa fa-cube"></i> Glamor<strong>Trade</strong>
    </h1>
    <!-- END Login Header -->

    <!-- Login Block -->
    <div class="block animation-fadeInQuickInv">
      <!-- Login Title -->
      <div class="block-title">
        <h2><%= yield(:title) %></h2>
      </div>
      <!-- END Login Title -->

      <%= render "layouts/messages" %>

      <%= yield %>

    </div>
    <!-- END Login Block -->

    <!-- Footer -->
    <footer class="text-muted text-center animation-pullUp">
      <%= render "devise/shared/links" %>
      <br />
      <small><span id="year-copy"></span> &copy; <%= link_to "Glamor<strong>Trade</strong>", root_path %></small>
    </footer>
    <!-- END Footer -->
  </div>
  <!-- END Login Container -->

</body>
</html>
