<%= content_for :title, @product.name %>
<div class="row">

  <div class="col-md-8">
    <!-- Partial Responsive Block -->
    <div class="block">
      <!-- Partial Responsive Title -->
      <div class="block-title">
        <div class="block-options pull-right">
          <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-primary" %>
        </div>
        <h2><%= @product.name %></h2>
      </div>
      <!-- END Partial Responsive Title -->

      <!-- Partial Responsive Content -->

      <table class="table table-striped table-borderless table-vcenter">
        <tbody>
          <tr>
            <td><strong>Product Name</strong></td>
            <td><%= @product.name %></td>
          </tr>
          <tr>
            <td><strong>Description</strong></td>
            <td><%= @product.description %></td>
          </tr>
          <% if @product.commission_rate.present? %>
          <tr>
            <td><strong>Commission Rate</strong></td>
            <td><%= @product.commission_rate %></td>
          </tr>
          <% end %>
          <tr>
            <td><strong>Ads Budget</strong></td>
            <td><%= number_to_currency @product.ads_budget %></td>
          </tr>

          <% @product.variants.each do |variant| %>
          <%= render partial: "variant", object: variant %>
          <% end %>

        </tbody>
      </table>

      <!-- END Partial Responsive Content -->
    </div>
    <!-- END Partial Responsive Block -->

  </div>

  <div class="col-md-4">
    <!-- Partial Responsive Block -->
    <div class="block">
      <!-- Partial Responsive Title -->
      <div class="block-title">
        <div class="block-options pull-right">
          <%= link_to 'Add Budget', edit_product_path(@product), class: "btn btn-primary" %>
        </div>
        <h2>Ads</h2>
      </div>
      <!-- END Partial Responsive Title -->
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-vcenter">
          <tbody>
            <tr>
              <td><strong>Impression</strong></td>
              <td>1398</td>
            </tr>
            <tr>
              <td><strong>Conversion Rate</strong></td>
              <td>12.3%</td>
            </tr>
            <tr>
              <td><strong>Leads (Income)</strong></td>
              <td>$ 1400</td>
            </tr>
            <tr>
              <td><strong>Leads (Sales)</strong></td>
              <td>36</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

    <div class="col-md-4">
    <!-- Partial Responsive Block -->
    <div class="block">
      <!-- Partial Responsive Title -->
      <div class="block-title">
        <div class="block-options pull-right">
        </div>
        <h2>Sales Summary</h2>
      </div>
      <!-- END Partial Responsive Title -->
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-vcenter">
          <tbody>
            <tr>
              <td>Period</td>
              <td>Unit Sold</td>
              <td>Sales</td>
            </tr>
            <tr>
              <td><strong>All Time</strong></td>
              <td><%= @product.all_time_sale_unit %></td>
              <td><%= number_to_currency @product.all_time_sale_income %></td>
            </tr>
            <tr>
              <td><strong>Last 30 Days</strong></td>
              <td><%= @product.last_30_days_sale_unit %></td>
              <td><%= number_to_currency @product.last_30_days_sale_income %></td>
            </tr>
            <tr>
              <td><strong>Last 7 Days</strong></td>
              <td><%= @product.last_7_days_sale_unit %></td>
              <td><%= number_to_currency @product.last_7_days_sale_income %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
