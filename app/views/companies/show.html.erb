<%= content_for :title, 'Company Infomation' %>

<div class="col-md-8  col-md-offset-2">
  <!-- Partial Responsive Block -->
  <div class="block">
    <!-- Partial Responsive Title -->
    <div class="block-title">
      <div class="block-options pull-right">
        <% if policy(Company).create? %>
          <%= link_to 'Add New', new_company_path, class: "btn btn-primary" %>
        <% end %>
        <% if policy(@company).edit? %>
          <%= link_to 'Edit', edit_company_path(@company), class: "btn btn-primary" %>
        <% end %>
      </div>
      <h2><%= @company.name %></h2>
    </div>
    <!-- END Partial Responsive Title -->

    <!-- Partial Responsive Content -->
    <div class="table-responsive">
      <table class="table table-striped table-borderless table-vcenter">
        <tbody>
          <tr>
            <td><strong>Company Name</strong></td>
            <td><%= @company.name %></td>
          </tr>
          <tr>
            <td><strong>Email Host</strong></td>
            <td><%= @company.email_host %></td>
          </tr>
          <tr>
            <td><strong>Commission Rate</strong></td>
            <td><%= @company.commission_rate %> %</td>
          </tr>
          <tr>
            <td><strong>Inventory Contact Email</strong></td>
            <td><%= mail_to @company.inventory_contact_email %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <!-- END Partial Responsive Content -->
  </div>
  <!-- END Partial Responsive Block -->
</div>
