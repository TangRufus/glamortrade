<%= simple_form_for @company_form, wrapper: :horizontal_form, :html => {:class => 'form-horizontal' } do |f| %>
<% if admin_signed_in? %>
  <%= f.input :name %>
  <%= f.input :domain_url %>
<% else %>
  <%= f.input :name, disabled: true %>
  <%= f.input :domain_url, disabled: true %>
<% end %>
<%= f.input :low_stock_contact_email %>
<%= f.input :out_of_stock_contact_email %>
<%= f.input :delivery_contact_email %>
<%= f.button :submit, class: "btn btn-lg btn-block btn-effect-ripple btn-primary" %>
<% end %>
