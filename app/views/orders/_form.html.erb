<%= simple_form_for @order_form, wrapper: :horizontal_form, :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.association :variant, prompt: "Choose a Variant" %>

  <%= f.input :unit %>

  <%= f.input :amount, wrapper: :horizontal_input_group do %>
    <span class="input-group-addon">&yen;</span>
    <%= f.input_field :amount, as: :integer, min: 0, step: 0.01, placeholder: "0.00", class: "form-control" %>
  <% end %>

  <%= f.button :submit, class: "btn btn-lg btn-block btn-effect-ripple btn-primary" %>
<% end %>
