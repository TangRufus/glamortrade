 <!-- First Row -->
 <div class="row">
  <!-- Simple Stats Widgets -->
  <div class="col-sm-6 col-lg-3">
    <a href="javascript:void(0)" class="widget">
      <div class="widget-content widget-content-mini text-right clearfix">
        <div class="widget-icon pull-left themed-background">
          <i class="gi gi-cardio text-light-op"></i>
        </div>
        <h2 class="widget-heading h3">
          <strong>+ $ <span data-toggle="counter" data-to="<%= @order_total_amount %>"><%= @order_total_amount %></span></strong>
        </h2>
        <span class="text-muted">SALES</span>
      </div>
    </a>
  </div>
  <div class="col-sm-6 col-lg-3">
    <a href="javascript:void(0)" class="widget">
      <div class="widget-content widget-content-mini text-right clearfix">
        <div class="widget-icon pull-left themed-background-success">
          <i class="fa fa-cube fa-lg text-light-op"></i>
        </div>
        <h2 class="widget-heading h3 text-success">
          <strong>- $ <span data-toggle="counter" data-to="<%= @order_total_commission_charge %>"><%= @order_total_commission_charge %></span></strong>
        </h2>
        <span class="text-muted">COMMISSION</span>
      </div>
    </a>
  </div>
  <div class="col-sm-6 col-lg-3">
    <a href="javascript:void(0)" class="widget">
      <div class="widget-content widget-content-mini text-right clearfix">
        <div class="widget-icon pull-left themed-background-warning">
          <i class="gi gi-briefcase text-light-op"></i>
        </div>
        <h2 class="widget-heading h3 text-warning">
          <strong>- $ <span data-toggle="counter" data-to="<%= @bill_total_amount %>"><%= @bill_total_amount %></span></strong>
        </h2>
        <span class="text-muted">EXPENSE</span>
      </div>
    </a>
  </div>
  <div class="col-sm-6 col-lg-3">
    <a href="javascript:void(0)" class="widget">
      <div class="widget-content widget-content-mini text-right clearfix">
        <div class="widget-icon pull-left themed-background-danger">
          <i class="gi gi-wallet text-light-op"></i>
        </div>
        <h2 class="widget-heading h3 text-danger">
          <strong>= $ <span data-toggle="counter" data-to="<%= @earnings %>"><%= @earnings %></span></strong>
        </h2>
        <span class="text-muted">EARNINGS</span>
      </div>
    </a>
  </div>
  <!-- END Simple Stats Widgets -->
</div>
<!-- END First Row -->

<!-- 2nd Row -->
<div class="row">
  <!-- Partial Responsive Content -->
  <div class="col-md-6">
    <!-- Partial Responsive Block -->
    <div class="block">
      <!-- Partial Responsive Title -->
      <div class="block-title">
        <h2>Bills</h2>
      </div>
      <!-- END Partial Responsive Title -->
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-vcenter">
          <thead>
            <tr>
              <% if admin_signed_in? %>
              <th>Company Name</th>
              <% end %>
              <th>Title</th>
              <th>Amount</th>
              <th>Description</th>
              <% if admin_signed_in? %>
              <th class="text-center"><i class="fa fa-flash"></i></th>
              <% end %>
            </tr>
          </thead>

          <tbody>
            <%= render @bills %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- END Partial Responsive Content -->

  <!-- Partial Responsive Content -->
  <div class="col-md-6">
    <!-- Partial Responsive Block -->
    <div class="block">
      <!-- Partial Responsive Title -->
      <div class="block-title">
        <h2>Products</h2>
      </div>
      <!-- END Partial Responsive Title -->
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-vcenter">
          <thead>
            <tr>
              <th>Product Name</th>
              <th>Description</th>
              <th class="text-center"><i class="fa fa-flash"></i></th>
            </tr>
          </thead>

          <tbody>
            <%= render @products %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END Partial Responsive Content -->

<!-- 3rd Row -->
<div class="row">
  <!-- Partial Responsive Content -->
  <div class="col-md-8">
    <!-- Partial Responsive Block -->
    <div class="block">
      <!-- Partial Responsive Title -->
      <div class="block-title">
        <h2>Sales</h2>
      </div>
      <!-- END Partial Responsive Title -->
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-vcenter">
          <thead>
            <tr>
              <th>Variant Our SKU</th>
              <th>Variant Your SKU</th>
              <th>Unit</th>
              <th>Amount</th>
              <th>Commission Charge</th>
              <th>Status</th>
            </tr>
          </thead>

          <tbody>
            <%= render @orders %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- END Partial Responsive Content -->


</div>
<!-- END Partial Responsive Content -->
